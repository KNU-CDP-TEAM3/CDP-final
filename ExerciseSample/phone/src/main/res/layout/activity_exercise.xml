<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical"
    tools:context=".ExerciseActivity">

    <TextView
        android:id="@+id/exercise_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="20dp"
        android:paddingVertical="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="30dp"
        android:background="@drawable/graph_title"
        android:text="운동 기록"
        android:textSize="20dp"
        android:textColor="#fff" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/exe1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/back_white"
                android:elevation="20dp"
                android:layout_margin="10dp">

                <EditText
                    android:id="@+id/exe1_memo"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:gravity="center"
                    android:background="@drawable/pic_jogging"
                    android:textCursorDrawable="@null"
                    android:textColor="#fff"
                    android:textColorHint="#fff"
                    android:hint="운동 기록을 작성하세요." />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/exe2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/back_white"
                android:elevation="20dp"
                android:layout_margin="10dp">

                <EditText
                    android:id="@+id/exe2_memo"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:gravity="center"
                    android:background="@drawable/pic_yoga"
                    android:textCursorDrawable="@null"
                    android:textColor="#fff"
                    android:textColorHint="#fff"
                    android:hint="운동 기록을 작성하세요."/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/exe3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/back_white"
                android:elevation="20dp"
                android:layout_margin="10dp">

                <EditText
                    android:id="@+id/exe3_memo"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:gravity="center"
                    android:background="@drawable/pic_surfing"
                    android:textCursorDrawable="@null"
                    android:textColor="#fff"
                    android:textColorHint="#fff"
                    android:hint="운동 기록을 작성하세요."/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/exe4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/back_white"
                android:elevation="20dp"
                android:layout_margin="10dp">

                <EditText
                    android:id="@+id/exe4_memo"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:gravity="center"
                    android:background="@drawable/pic_street"
                    android:textCursorDrawable="@null"
                    android:textColor="#fff"
                    android:textColorHint="#fff"
                    android:hint="운동 기록을 작성하세요."/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/exe5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/back_white"
                android:elevation="20dp"
                android:layout_margin="10dp">

                <EditText
                    android:id="@+id/exe5_memo"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:gravity="center"
                    android:background="@drawable/pic_board"
                    android:textCursorDrawable="@null"
                    android:textColor="#fff"
                    android:textColorHint="#fff"
                    android:hint="운동 기록을 작성하세요."/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/exe6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/back_white"
                android:elevation="20dp"
                android:layout_margin="10dp">

                <EditText
                    android:id="@+id/exe6_memo"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:gravity="center"
                    android:background="@drawable/pic_bike"
                    android:textCursorDrawable="@null"
                    android:textColor="#fff"
                    android:textColorHint="#fff"
                    android:hint="운동 기록을 작성하세요."/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/back_white"
                android:layout_margin="10dp">
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="#fff"
                android:layout_margin="10dp">
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>